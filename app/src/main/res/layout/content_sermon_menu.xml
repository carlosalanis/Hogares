            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            card_view:cardBackgroundColor="@android:color/transparent">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="#F5843F" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/cardIcon"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/s1" />


                <TextView
                    android:id="@+id/bienaventurado_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/cap_text"
                    android:layout_alignRight="@+id/cap_text"
                    android:text="Bienaventurados"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/cap_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end|top"
                    android:layout_below="@+id/bienaventurado_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_toEndOf="@+id/cardIcon"
                    android:layout_toRightOf="@+id/cardIcon"
                    android:text="Los pobres de espíritu"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/vers_text"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cap_text"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:gravity="end|top"
                    android:text="... pues de ellos es el reino de los cielos."
                    android:textSize="8sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

