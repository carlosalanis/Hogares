<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logohogares"
            tools:ignore="ContentDescription"/>


        <ImageView
            android:id="@+id/imgMujeres"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/imgLogo"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mdlb"
            android:contentDescription="Mujeres de la Biblia"/>

        <ImageView
            android:id="@+id/imgOraciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom ="10dp"
            android:layout_above="@id/imgEspeciales"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ocrlinea"
            android:contentDescription="@string/OCR_ContentDescription"/>


    <ImageView
        android:id="@+id/imgEspeciales"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/imgLectura"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@drawable/esp3"
        android:contentDescription="Estudios Especiales"/>

    <ImageView
        android:id="@+id/imgLectura"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:contentDescription="@string/Plan_ContentDescription"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lectura" />

    <ImageView
            android:id="@+id/imgBiblia"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:src="@drawable/lbla2" />

</RelativeLayout>